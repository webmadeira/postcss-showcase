.button {
  display: flex;
  justify-content: center;
  border-radius: 6px;
  cursor: pointer;
}

.button.btn-large {
  width: 140px;
  height: 40px;
  font-size: 14px;
}

.button.btn-red {
  color: #fff;
  background-color: #e23B00;
}

.button.btn-blue {
  color: #fff;
  background-color: #3f526b;
}